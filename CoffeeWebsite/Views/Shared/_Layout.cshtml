<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    <script src="https://kit.fontawesome.com/16b5112f28.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4-4.1.1/jq-3.3.1/dt-1.10.20/r-2.2.3/datatables.min.css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Assets/site.min.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
            <div class="container">
                <a class="navbar-brand" href="/">
                    <img src="/Assets/image/logov2.png"
                         class="d-inline-block align-center" alt="">
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item hover-effect">
                            <a class="nav-link" href="/">Trang chủ</a>
                        </li>
                        <li class="nav-item hover-effect">
                            <a class="nav-link" href="/Home/News">Tin tức</a>
                        </li>
                        <li class="nav-item hover-effect">
                            <a class="nav-link" href="/Home/Menu">Menu</a>
                        </li>
                        <li class="nav-item hover-effect">
                            <a class="nav-link" href="/Home/Booking">Đặt bàn</a>
                        </li>
                        <li class="nav-item hover-effect">
                            <a class="nav-link" href="/Home/About">Về chúng tôi</a>
                        </li>
                        <li class="nav-item hover-effect">
                            <a class="nav-link" href="/Home/Feedback">Phản hồi</a>
                        </li>
                    </ul>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item hover-effect">
                                <a class="nav-link" href="/Account/AccountProfile">
                                    <i class="far fa-user"></i> Thông tin
                                </a>
                            </li>

                            <li class="nav-item hover-effect">
                                <a class="nav-link" href="/Account/Logout">
                                    <i class="fas fa-sign-in-alt"></i> Đăng xuất
                                </a>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item hover-effect">
                                <a class="nav-link" href="/Account/Login">
                                    <i class="fas fa-sign-in-alt"></i> Đăng nhập
                                </a>
                            </li>

                            <li class="nav-item hover-effect">
                                <a class="nav-link" href="/Account/Register">
                                    <i class="far fa-user"></i> Đăng kí
                                </a>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>

    @RenderBody()

    <footer style="z-index:10">
        <div class="container ">
            <div class="row padding mx-0">
                <div class="col-md-4 d-flex justify-content-center align-self-center footer-bg">
                    <ul>
                        Giờ mở cửa
                        <li>Thứ Hai - Thứ Sáu: 8:00 - 22:00</li>
                        <li>Cuối tuần: 7:00 - 23:00</li>
                    </ul>
                </div>
                <div class="col-md-4 d-flex justify-content-center align-self-center footer-bg">
                    <ul>
                        Liên hệ
                        <li>
                            Phone: 1800-1008
                        </li>
                        <li>
                            Email: baristacoffee@gmail.com
                        </li>
                    </ul>
                </div>
                <div class="col-md-4 d-flex justify-content-center align-self-center footer-bg">
                    <ul style="list-style-type:none">
                        Địa chỉ
                        <li>
                            <i class='fas fa-map-marker-alt' style='font-size:24px'></i> 11B Trần Cao Vân, Phường Đakao
                        </li>
                        <li>
                            <i class='fas fa-map-marker-alt' style='font-size:24px'></i> 18A Nguyễn Thị Minh Khai, Phường Đa Kao, Quận 1, Hồ Chí Minh
                        </li>
                        <li>
                            <i class='fas fa-map-marker-alt' style='font-size:24px'></i> 30 Đinh Tiên Hoàng, Đa Kao, Quận 1, Ho Chi Minh City, Vietnam
                        </li>
                    </ul>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 footer-bg">
                    <hr color="white" style="width: 100%;">
                    <div class="center follow-us">
                        Theo dõi chúng tôi tại: <strong> www.baristacoffee.vn</strong>
                        <a href="#">
                            <i class="fa fa-facebook-square"></i>
                        </a>
                        <span>
                            <a href="#">
                                <i class="fa fa-instagram" style="height: 30px; width: 30px;"></i>
                            </a>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="text-shadow"></div>
    </footer>

    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
    {
        <a href="/Admin/Home/Index">
            <div class="alert alert-success fixed-bottom text-center" role="alert" style="margin-bottom: 0px">
                Go to Admin Section
            </div>
        </a>
    }

    <script type="text/javascript" src="~/Assets/js/jquery/jquery-3.5.1.min.js"></script>
    <script type="text/javascript" src="~/Assets/js/bootstrap/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="~/Assets/site.min.js"></script>

    <script>
        $('.carousel').carousel('cycle');
    </script>

    @RenderSection("scripts", false)
</body>
</html>