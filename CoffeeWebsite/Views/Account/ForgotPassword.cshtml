
@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";

    string message = ViewBag.Message;   
}

<div class="titile-bg" style="background: url('../Assets/image/bg_2.jpg')">
    <div class="container">
        <div class="row justify-content-center align-items-center">
            <div class="titile-name">Quên mật khẩu</div>
        </div>
    </div>
    <div class="text-shadow"></div>
</div>

<main>
    <div class="container ">
        <div class="row py-5 justify-content-center">
            <div class="card ">
                <div class="card-body login-card-body">
                    <p class="login-box-msg text-center">You forgot your password? <br /> Here you can easily retrieve a new password.</p>

                    <form action="/Account/ForgotPassword" method="post">
                        @Html.AntiForgeryToken()
                        @if (!string.IsNullOrEmpty(message))
                        {
                            <div class="alert alert-danger" role="alert">
                                @Html.Raw(message)
                            </div>
                        }

                        <div class="input-group mb-3">
                            <input type="email" class="form-control" placeholder="Email">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-envelope"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12" style="padding: 0px">
                                <button type="submit" class="btn btn-primary btn-block">Request new password</button>
                            </div>
                        </div>
                    </form>

                    <div class="row justify-content-between">
                        <p class="mt-3 mb-1">
                            <a href="/Account/Login">Login</a>
                        </p>
                        <p class="mt-3 mb-1">
                            <a href="/Account/Register" class="text-center">Register</a>
                        </p>
                    </div>



                </div>
                <!-- /.login-card-body -->
            </div>
        </div>
    </div>

</main>