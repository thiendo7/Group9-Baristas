
@{
    ViewBag.Title = "FeedBack";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string message = ViewBag.Message;
    string successMessage = ViewBag.SuccessMessage;
}

<main>
    <div class="titile-bg" style="background: url('../Assets/image/bg_3.jpg')">
        <div class="container">
            <div class="row justify-content-center align-items-center">
                <div class="titile-name">Phản hồi</div>
            </div>
        </div>
        <div class="text-shadow"></div>
    </div>

    <div class="container body">
        <div class="header-section">
            <h1 id="title" class="text-center">Phản hồi về Barista Coffee</h1>
            <p id="description" class="description text-center">
                Luôn luôn lắng nghe, lâu lâu mới hiểu
            </p>
        </div>

        @using (Html.BeginForm("Feedback", "Home", FormMethod.Post, new { @class = "form" }))
        {
            @Html.AntiForgeryToken()
            if (!string.IsNullOrEmpty(successMessage))
            {
                <div class="alert alert-success" role="alert">
                    @Html.Raw(successMessage)
                </div>
            }
            if (!string.IsNullOrEmpty(message))
            {
                <div class="alert alert-danger" role="alert">
                    @Html.Raw(message)
                </div>
            }
            <div class="form-group">
                <label for="CustomerName">Họ và tên</label>
                <input type="text" placeholder="Cho biết Barista biết bạn có cái tên xinh đẹp như thế nào nè" class="form-control" id="CustomerName" name="CustomerName">
            </div>

            <div class="form-group">
                <label for="Email">Email</label>
                <input type="text" placeholder="Emal của bạn là gì nè" class="form-control" id="Email" name="Email">
            </div>

            <div class="form-group">
                <label for="Age">Tuổi</label>
                <input type="number" placeholder="Bạn còn trẻ hay đã có tuổi" class="form-control" id="Age" name="Age">
            </div>


            <div class="form-group">
                <label for="Job">Công việc hiện tại</label>
                <input type="text" placeholder="Cho Barista Coffe bạn đang làm gì nè" class="form-control" id="Job" name="Job">
            </div>

            <div class="form-group">
                <label for="Another">Ý kiến khác</label>
                <textarea id="Another"
                          class="input-textarea"
                          name="Another"
                          style="border:1px solid"
                          placeholder="Thêm ý kiến của bạn vào đây..."></textarea>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary w-100">
                    Gửi thông tin
                </button>
            </div>
        }
    </div>
</main>

